{
    "name": "DarkModeFixer",
    "description": "Fixes elements broken by chrome://flags#enable-force-dark",
    "version": "1.0",
    "manifest_version": 3,

    "background": {
        "service_worker": "background.js"
    },

    "action":{
        "default_title": "DarkModeFixer",
        "default_popup": "popup.html"
    },

    "content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["contentScript.js"],
		"run_at": "document_end"
	}],

    "icons": {
        "16": "/assets/icons16.png",
        "32": "/assets/icons32.png",
        "48": "/assets/icons48.png",
        "128": "/assets/icon128.png"
      },

    "permissions": [
        "scripting",
        "tabs"
    ],
    
    "host_permissions": ["<all_urls>"]
}